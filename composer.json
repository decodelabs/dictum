{
    "name": "decodelabs/dictum",
    "description": "Text formatting tools",
    "type": "library",
    "keywords": ["text", "format"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^8.0",
        "symfony/polyfill-mbstring": "^1.7",

        "decodelabs/exceptional": "^0.4",
        "decodelabs/fluidity": "^0.3",
        "decodelabs/glitch-support": "^0.4",
        "decodelabs/veneer": "^0.10.10"
    },
    "require-dev": {
        "decodelabs/phpstan-decodelabs": "^0.6",
        "decodelabs/systemic": "^0.9.3|^0.10",

        "nesbot/carbon": "^2.25"
    },
    "suggest": {
        "decodelabs/systemic": "Managed locale and timezone info"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Dictum\\": "src/Dictum"
        },
        "files": [
            "src/global.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.4.x-dev"
        }
    }
}
