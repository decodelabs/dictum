{
    "name": "decodelabs/dictum",
    "description": "Text formatting tools",
    "type": "library",
    "keywords": [ "text", "format" ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "require": {
        "php": "^8.4",
        "symfony/polyfill-mbstring": "^1.33",

        "decodelabs/cosmos": "^0.3",
        "decodelabs/exceptional": "^0.6.3",
        "decodelabs/fluidity": "^0.3.7",
        "decodelabs/kingdom": "^0.1",
        "decodelabs/nuance": "^0.1.9"
    },
    "require-dev": {
        "decodelabs/phpstan-decodelabs": "^0.7",

        "nesbot/carbon": "^3.10.2"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Dictum\\": "src/Dictum/"
        },
        "classmap": [
            "src/Dictum.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.7.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
